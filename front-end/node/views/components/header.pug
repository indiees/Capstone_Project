div
  head
    meta(charset='utf-8')
    title View Cars
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js' integrity='sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf' crossorigin='anonymous')
    script(src='/node_modules/@fortawesome/fontawesome-free/js/all.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    link(rel='stylesheet' href='style/navbar.css')
  nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #004aad;')
    .container-fluid
      a.navbar-brand(href='#')
        img.d-inline-block.align-text-top(src='/style/L.png' alt='' width='100' height='95')
      a.navbar-brand.text-white(href='#') Rent-A-Lux
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon.text-white
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item#logout
            a.nav-link.text-white.btn-outline-info#logoutbtn Logout
          li.nav-item#login
            a.nav-link.text-white.btn-outline-info(href='/') Login
          li.nav-item
            a.nav-link.text-white.btn-outline-info(href='/cars') Cars
          li.nav-item
            a.nav-link.text-white.btn-outline-info(href='/bays') Bays
          li.nav-item
            a.nav-link.text-white.btn-outline-info(href='/admin') Admin
          li.nav-item
            a.nav-link.text-white.btn-outline-info(href='/bookings') Bookings
          li.nav-item
          button.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal') Profile
          // Modal
          #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog
              .modal-content
                .modal-header
                  h5#exampleModalLabel.modal-title Change profile details
                  button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body
                  .form
                    .mb-3
                      label.form-label(for='Username' placeholder='Enter User Name') User Name
                      input#Userid.form-control(type='text is-invalid' aria-describedby='InputGroup1' required)
                      .invalid-feedback
                        Enter a valid username
                    .mb-3
                      label.form-label(for='Email' placeholder='name@example.com') Email address
                      input.form-control(type='email is-invalid' required)
                      .invalid-feedback
                        Enter a valid Email
                    .mb-3
                      label.form-label(for='exampleInputPassword1' placeholder='Password') Password
                      input#exampleInputPassword1.form-control(type='password' required)
                    .mb-3
                      label.form-label(for='exampleInputPassword1' placeholder='Password') Confirm Password
                      input#exampleInputPassword1.form-control(type='password' required)
                .modal-footer
                  button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
                  button.btn.btn-danger(type='button' data-bs-toggle='modal' data-bs-target='#confirmModal') Delete User
                  button.btn.btn-primary(type='submit') Save changes
//
              //confirm delete modal
              #confirmModal.modal.fade(tabindex='-' aria-labelledby='confirmModalLabel' aria-hidden='true')
              .modal-dialog
                .modal-content
                  .modal-header
                    h5#exampleModalLabel.modal-title Are you sure you want to delete this user?
                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                  .modal-footer
                    button.btn.btn-secondary(type='button' data-bs-dismiss='modal') No
                    button.btn.btn-primary(type='submit') Yes
                
script(src='scripts/navbar.js')
