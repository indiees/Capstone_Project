div( class= "adminNav")
    button#carBtn(tg="carsDiv") Manage Cars
    button#userBtn(tg="usersDiv") Manage Users
    button#bayBtn(tg="baysDiv") Manage Bays
div(id="blank" class="sectionDiv")
    p Chose a category on the left
div(id="carsDiv" class="sectionDiv")
    H1 Cars
    table.content-table
        thead(id="carsHeader")
        tbody(id="carsBody")
    div#carLoading(style="text-align:center")
        img(src="images/Spinner.gif")
    button.create#addCar Add Car

div(id="usersDiv" class="sectionDiv")
    H1 Users
    table.content-table
        thead(id="usersHeader")
        tbody(id="usersBody")
    div#userLoading(style="text-align:center")
        img(src="images/Spinner.gif")
        
div(id="baysDiv" class="sectionDiv")
    H1 Bays
    table.content-table
        thead(id="baysHeader")
        tbody(id="baysBody")
    div#bayLoading(style="text-align:center")
        img(src="images/Spinner.gif")
    button.create#addBay Add Bay

div#bayModal.modals
    div.mContent
        span.close &times;
        H1#heading
        label ID
        input(type="text" disabled)#bay_id
        label Location
        input(type="text")#location
        label max_capacity
        input(type="text")#max_capacity
        button#submi